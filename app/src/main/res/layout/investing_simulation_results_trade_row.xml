<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/symbolTradeNameDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/symbolTradeDateDetails"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="MSFT - [CHQ#000275 - 178934235454]"/>

    <TextView
        android:id="@+id/symbolTradeAmountDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/symbolTradeNameDetails"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        tools:text="BUY 28.434365455466 @ 96.26"/>

    <TextView
        android:id="@+id/symbolTradeDateDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        tools:text="2018-02-01"/>

</RelativeLayout>