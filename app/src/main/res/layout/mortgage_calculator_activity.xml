<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_calculator_mortgage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/form_padding"
        android:layout_marginStart="@dimen/form_padding"
        android:layout_marginTop="@dimen/form_padding"
        android:descendantFocusability="beforeDescendants"
        android:orientation="vertical" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_mortgage_padding"
        android:layout_marginEnd="@dimen/button_mortgage_padding"
        android:layout_marginStart="@dimen/button_mortgage_padding"
        android:background="@color/td_green">

        <Spinner
            android:id="@+id/frequency_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white" />
    </FrameLayout>


    <Button
        android:id="@+id/calculate_payment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_mortgage_padding"
        android:background="@color/grey"
        android:enabled="false"
        android:text="@string/calculate_payments_string"
        android:textColor="@color/white" />
</LinearLayout>